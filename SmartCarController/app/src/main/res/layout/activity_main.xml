<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dku.smartcar.smartcarcontroller.thread.MainActivity">

    <Button
        android:text="Voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voiceButton"
        tools:ignore="HardcodedText"
        android:onClick="voiceOnclick"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="66dp" />

    <Button
        android:text="geun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geunButton"
        tools:ignore="HardcodedText"
        android:onClick="geunOnclick"
        android:layout_alignBaseline="@+id/voiceButton"
        android:layout_alignBottom="@+id/voiceButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/controlButton"
        tools:ignore="HardcodedText"
        android:onClick="controlOnclick"
        android:layout_marginStart="66dp"
        android:layout_alignBaseline="@+id/geunButton"
        android:layout_alignBottom="@+id/geunButton"
        android:layout_alignParentStart="true" />
</RelativeLayout>
